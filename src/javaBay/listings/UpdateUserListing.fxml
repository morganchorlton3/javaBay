<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.*?>

<?import javafx.geometry.Insets?>
<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="javaBay.listings.UpdateUserController">
    <bottom>
        <HBox>
            <Button prefWidth="100" defaultButton="true"
                    text="Back" alignment="CENTER" fx:id="backBtn" onAction="#backBtn"></Button>
        </HBox>
    </bottom>
<center>
    <VBox spacing="10">
        <padding>
            <Insets left="20.0" right="30" top="10.0" bottom="30.0"/>
        </padding>
        <GridPane xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="20" vgap="10">
            <Label GridPane.rowIndex="0" GridPane.columnIndex="0">
                Listing Name:
            </Label>
            <TextField fx:id="lotName" text="name" GridPane.rowIndex="0"
                       GridPane.columnIndex="1" />

            <Label GridPane.rowIndex="1" GridPane.columnIndex="0">
                Listing Description:
            </Label>
            <TextField fx:id="lotDescription"  text="Description"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label GridPane.rowIndex="2" GridPane.columnIndex="0">
                Buy It Now Price:
            </Label>
            <TextField fx:id="lotBINPrice"  text="Price"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label GridPane.rowIndex="3" GridPane.columnIndex="0">
                Start Auction Price:
            </Label>
            <TextField fx:id="lotStartAPrice"  text="Price"
                       GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Button fx:id="updateBtn" onAction="#updateListing" mnemonicParsing="false" text="Update" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>
    </VBox>
</center>

</BorderPane>
