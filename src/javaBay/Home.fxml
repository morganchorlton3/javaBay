<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="javaBay.HomeController">
  <bottom>
    <HBox alignment="CENTER" spacing="10.0">
      <children>
        <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#loadLogin" text="Login" />
        <Button fx:id="registerBtn" mnemonicParsing="false" onAction="#loadRegister" text="Register" />
        <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#logout" text="Logout" visible="false" />
      </children>
    </HBox>
  </bottom>
  <center>
    <VBox spacing="10">
      <padding>
        <Insets left="20.0" right="30" top="10.0" bottom="30.0"/>
      </padding>
      <ListView fx:id="userListings"></ListView>
      <HBox>
        <Button fx:id="viewListingBtn" mnemonicParsing="false" onAction="#view" text="View Listing" />
      </HBox>
    </VBox>
  </center>
  <padding>
    <Insets bottom="20.0" />
  </padding>
  <right>
    <VBox alignment="CENTER" spacing="10.0">
      <padding>
        <Insets right="20.0" top="10.0"/>
      </padding>
      <Text  strokeType="OUTSIDE" strokeWidth="0.0" text="Listings:" />
      <Button fx:id="createListingBtn" mnemonicParsing="false" onAction="#createListing" text="Create" />
      <Button fx:id="ViewUserListingBtn" mnemonicParsing="false"  onAction="#userListing"  text="View Your Listings" />
    </VBox>
  </right>
  <top>
    <VBox prefHeight="200.0" prefWidth="100.0">
      <children>
        <MenuBar>
          <menus>
            <Menu mnemonicParsing="false" text="File">
              <items>
                <MenuItem mnemonicParsing="false" text="Close" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
              <items>
                <MenuItem mnemonicParsing="false" text="Delete" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
              <items>
                <MenuItem mnemonicParsing="false" text="About" />
              </items>
            </Menu>
          </menus>
        </MenuBar>
        <HBox>
          <padding>
            <Insets left="20.0" top="10.0"/>
          </padding>
          <Text fx:id="userWelcome" strokeType="OUTSIDE" strokeWidth="0.0" text="Hi, User" />
        </HBox>
      </children>
    </VBox>
  </top>
</BorderPane>
